# Example environment file (do NOT commit real secrets). Use your CI secret store
# to provide the real values in production.

# --- Database Configuration ---
DATABASE_URL=postgresql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:5432/<DB_NAME>
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voting_db
DB_USER=voting_user
# DB_PASSWORD should be provided by your CI/CD secret store

# --- Security & Encryption ---
# SECRET_KEY, ENCRYPTION_KEY and SESSION_SECRET should come from your secret manager
SECRET_KEY=replace-with-secret
# Prefer storing ENCRYPTION_KEY as base64 in ENCRYPTION_KEY_B64 for CI safety
ENCRYPTION_KEY_B64=<base64-encoded-32-byte-key>
# SALT should be stored in SALT_B64 or managed via SALT_FILE outside of repo
SALT_FILE=.salt

# --- OAuth ---
OAUTH_CLIENT_ID=<your-oauth-client-id>
OAUTH_CLIENT_SECRET=<your-oauth-client-secret>

# --- Session ---
SESSION_TIMEOUT=1800
SESSION_SECRET=replace-with-secret

# --- App Settings ---
ENVIRONMENT=development
DEBUG=false

# --- Admin (do not keep plaintext credentials in repo) ---
ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD should be created securely and stored in CI secret store
# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/voting_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voting_db
DB_USER=voting_user
DB_PASSWORD=your_secure_password
USE_SQLITE=true

# Security & Encryption
SECRET_KEY=your_generated_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SALT_FILE=.salt

# OAuth Configuration (Google)
OAUTH_CLIENT_ID=your_google_oauth_client_id
OAUTH_CLIENT_SECRET=your_google_oauth_client_secret
OAUTH_REDIRECT_URI=http://localhost:8501/auth/callback

# Session Management
SESSION_TIMEOUT=1800
SESSION_SECRET=your_session_secret_key

# OTP/2FA Configuration
OTP_ISSUER=SecureVotingPlatform
OTP_WINDOW=1

# Email Configuration (for OTP sending)
GMAIL_USER=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Login Security
MAX_LOGIN_ATTEMPTS=3
LOGIN_LOCKOUT_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=voting_platform.log

# Application Settings
ENVIRONMENT=development
DEBUG=false
STREAMLIT_SERVER_PORT=8501
