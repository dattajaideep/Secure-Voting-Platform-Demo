    <script>
        // Page Navigation
        document.addEventListener('DOMContentLoaded', function() {
            // Navigation elements
            const homeLink = document.getElementById('home-link');
            const loginLink = document.getElementById('login-link');
            const registerLink = document.getElementById('register-link');
            const showLogin = document.getElementById('show-login');
            const showRegister = document.getElementById('show-register');
            const logoutLink = document.getElementById('logout-link');
            
            // Pages
            const pages = document.querySelectorAll('.page');
            const homePage = document.getElementById('home-page');
            const loginPage = document.getElementById('login-page');
            const registerPage = document.getElementById('register-page');
            const dashboardPage = document.getElementById('dashboard-page');
            
            // Dashboard sections
            const dashboardSections = document.querySelectorAll('.dashboard-section');
            const sidebarLinks = document.querySelectorAll('.sidebar a');
            
            // Show page function
            function showPage(page) {
                pages.forEach(p => p.classList.remove('active'));
                page.classList.add('active');
            }
            
            // Navigation event listeners
            homeLink.addEventListener('click', function(e) {
                e.preventDefault();
                showPage(homePage);
            });
            
            loginLink.addEventListener('click', function(e) {
                e.preventDefault();
                showPage(loginPage);
            });
            
            registerLink.addEventListener('click', function(e) {
                e.preventDefault();
                showPage(registerPage);
            });
            
            showLogin.addEventListener('click', function(e) {
                e.preventDefault();
                showPage(loginPage);
            });
            
            showRegister.addEventListener('click', function(e) {
                e.preventDefault();
                showPage(registerPage);
            });
            
            logoutLink.addEventListener('click', function(e) {
                e.preventDefault();
                showPage(homePage);
            });
            
            // Dashboard section navigation
            sidebarLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Update active link
                    sidebarLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Show corresponding section
                    const sectionId = this.getAttribute('data-section');
                    dashboardSections.forEach(section => {
                        section.classList.remove('active');
                        if (section.id === sectionId) {
                            section.classList.add('active');
                        }
                    });
                });
            });
            
            // Form submissions
            document.getElementById('login-form').addEventListener('submit', function(e) {
                e.preventDefault();
                // In a real implementation, this would validate credentials with a backend
                showPage(dashboardPage);
            });
            
            document.getElementById('register-form').addEventListener('submit', function(e) {
                e.preventDefault();
                // In a real implementation, this would create a new user account
                showPage(loginPage);
            });
            
            document.getElementById('profile-form').addEventListener('submit', function(e) {
                e.preventDefault();
                // In a real implementation, this would update user profile
                alert('Profile updated successfully!');
            });
            
            // Voting functionality
            document.getElementById('cast-vote-btn').addEventListener('click', function() {
                const selectedCandidate = document.querySelector('input[name="candidate"]:checked');
                if (!selectedCandidate) {
                    alert('Please select a candidate before casting your vote.');
                    return;
                }
                
                // In a real implementation, this would submit the vote to a backend
                // with proper encryption and verification
                alert(`Your vote for candidate ${selectedCandidate.value} has been cast successfully!`);
                
                // Reset selection
                selectedCandidate.checked = false;
            });
            
            // Candidate selection styling
            const candidateOptions = document.querySelectorAll('.candidate-option');
            candidateOptions.forEach(option => {
                option.addEventListener('click', function() {
                    const radio = this.querySelector('input[type="radio"]');
                    radio.checked = true;
                    
                    // Update styling
                    candidateOptions.forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
                });
            });
        });
    </script>
